export DIRENV_WARN_TIMEOUT=20s

# Tidepool currently has nix-daemon masked in the active generation.
# Force devenv/direnv to use a user-local store instead of /nix/var/nix/daemon-socket.
if [ -n "${NIX_CONFIG:-}" ]; then
  export NIX_CONFIG="store = local?root=$HOME/.local/share/nix
$NIX_CONFIG"
else
  export NIX_CONFIG="store = local?root=$HOME/.local/share/nix"
fi

eval "$(devenv direnvrc)"
use devenv
